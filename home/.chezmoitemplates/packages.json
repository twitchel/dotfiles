  "packageManagers": {
    "dnf": {
      "install": "sudo dnf install -y",
      "update": "sudo dnf upgrade -y --refresh",
      "search": "dnf search"
    },
    "apt": {
      "install": "sudo apt install -y",
      "update": "sudo apt update && sudo apt upgrade -y",
      "search": "apt search"
    },
    "brew": {
      "install": "brew install",
      "update": "brew update && brew upgrade",
      "search": "brew search"
    },
    "brew_cask": {
      "install": "brew install --cask",
      "update": "brew update && brew upgrade --cask",
      "search": "brew search --cask"
    },
    "pacman": {
      "install": "sudo pacman -S --noconfirm",
      "update": "sudo pacman -Syu --noconfirm",
      "search": "pacman -Ss"
    },
    "pamac": {
      "install": "pamac install --no-confirm",
      "update": "pamac upgrade -a --no-confirm",
      "search": "pamac search"
    },
    "flatpak": {
      "install": "flatpak install -y flathub",
      "update": "flatpak update -y",
      "search": "flatpak search"
    },
    "cargo": {
      "install": "cargo install",
      "update": "cargo install",
      "search": "cargo search"
    }
  },
