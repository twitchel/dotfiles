                - cheat
                - dive
                - duckdb
                - eza
                - fd
                - figlet
                - fzf
                - gh
                - git-delta
                - go
                - grep
                - htop
                - humanlog
                - jesseduffield/lazygit/lazygit
                - jq
                - lazydocker
                - neovim
                - nmap
                - nvim
                - rclone
                - ripgrep
                - screen
                - starship
                - tig
                - tmux
                - vim
                - wget
                - yazi
                - yq
                - zoxide
                - zsh
            brewCask:
                - firefox
                - gimp
                - ghostty
                - spotify
                - visual-studio-code
                - vlc
            flatpak:
                - com.brave.Browser
                - com.discordapp.Discord
                - com.google.Chrome
                - com.jetbrains.IntelliJ-IDEA-Ultimate
                - com.mattjakeman.ExtensionManager
