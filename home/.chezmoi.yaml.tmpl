    hosts:
        coffee-sponge:
        grease-monkey:
            packages:
                brew:
                    - tailscale
                flatpak:
        mac-4900:
            packages:
                brew:
                    - awscli
                    - awscli-local
                    - aws-sam-cli
                    - trivy
                brewTaps:
                brewCaskTaps:
                brewCask:
                    - caffeine
                    - gas-mask
                    - jordanbaird-ice
                    - m-cli
                    - mas
                    - microsoft-edge
                    - obsidian
                    - raycast
                    - rectangle
                    - slack
                    - stats
                    - visual-studio-code
env:
    OS: "{{ .chezmoi.os }}"
    OS_DISTRO: "{{ $osid }}"
    OS_VARIANT: "{{ .chezmoi.osRelease.variantID }}"
    HOSTNAME: "{{ .chezmoi.hostname }}"
    BREWPATH: "{{ $brewpath }}"
    BREWBIN: "{{ $brewpath }}/brew"
